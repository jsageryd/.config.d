[user]
	name = Johan Sageryd
	email = j@1616.se
[core]
	excludesfile = ~/.config.d/git/.gitexclude
	editor = vim
[advice]
	detachedHead = false
[alias]
	a = add
	ci = commit
	co = checkout
	cp = cherry-pick
	ps = push
	rb = rebase
	ri = rebase --interactive
	rs = reset
	st = status
	ch = "!f() { hash=$(git rev-parse --verify --short=10 ${1:-HEAD} | tr -d '\n'); printf $hash | pbcopy; printf 'Hash copied: '; git log -1 --oneline $hash; }; f"
[mergetool]
	keepBackup = false
	prompt = false
[color]
	ui = auto
[sendemail]
	smtpserver = smtp.googlemail.com
	smtpserverport = 465
	smtpencryption = ssl
	smtpuser = j@1616.se
[push]
	default = simple
[rebase]
	autosquash = true
	missingCommitsCheck = warn
[difftool]
	prompt = false
[rerere]
	enabled = true
[instaweb]
	httpd = webrick
[fetch]
	prune = true
[status]
	short = true
	branch = true
[merge]
	log = 2000
