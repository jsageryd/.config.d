[user]
	name = Johan Sageryd
	email = j@1616.se
[core]
	excludesfile = ~/.config.d/git/.gitexclude
	editor = vim
[advice]
	detachedHead = false
[alias]
	a = add
	ci = commit
	co = checkout
	cp = cherry-pick
	rb = rebase
	ri = rebase --interactive
	st = status
	rs = reset
	cl = "!git config --list | ruby -e 'c = {}; STDIN.each { |l| k, v = l.match(/^([^=]+)=(.*)/)[1, 2]; c[k] = v }; ml = c.keys.max { |a, b| a.length <=> b.length }.length; c.each { |k, v| puts \"#{k.ljust(ml)} = #{v}\" }'"
[mergetool]
	keepBackup = false
	prompt = false
[color]
	ui = auto
[sendemail]
	smtpserver = smtp.googlemail.com
	smtpserverport = 465
	smtpencryption = ssl
	smtpuser = j@1616.se
[push]
	default = simple
[rebase]
	autosquash = true
[difftool]
	prompt = false
[rerere]
	enabled = true
[instaweb]
	httpd = webrick
[fetch]
	prune = true
[status]
	short = true
	branch = true
