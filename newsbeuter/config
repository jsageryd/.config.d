# Open links with 'open'
browser "open -g"

# Auto-reload feeds
auto-reload yes

# Reload every 15 minutes
reload-time 15

# Try to re-download feeds 10 times before giving up
download-retries 10

# Confirm exit
confirm-exit yes

# Use proper date format
datetime-format "%a %Y-%m-%d %R"

# Fix colours
# color <element> <fg> <bf> [<attribute> ...]
color background color190 black
color listnormal color255 black
color listfocus color255 color238
color info color190 black
color article color255 black

# Fix title formats
articlelist-title-format "Articles in '%T' (%u unread, %t total) - %U"
dialogs-title-format "Dialogs"
feedlist-title-format "My feeds (%u unread, %t total)%?T? - tag `%T'&?"
filebrowser-title-format "%?O?Open File&Save File? - %f"
help-title-format "Help"
itemview-title-format "%T"
searchresult-title-format "Search result (%u unread, %t total)"
selectfilter-title-format "Select Filter"
selecttag-title-format "Select Tag"
urlview-title-format "URLs"

# Save path
save-path "~/Desktop"

# Fix list formats
feedlist-format "%4i %n %11u %t"

# Show feeds with unread articles first
feed-sort-order "unreadarticlecount-asc"

# Show the latest article first
article-sort-order "date-asc"

# No keyboard shortcut info
show-keymap-hint no

# Only search current feed for next/previous articles
goto-next-feed no
